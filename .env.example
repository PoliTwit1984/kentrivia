# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development  # Change to 'production' for production environment
SECRET_KEY=your-secret-key-here  # Change this to a secure random string

# Database Configuration
DATABASE_URL=sqlite:///kentrivia.db  # SQLite database path

# Server Configuration
PORT=5001  # Application port
HOST=127.0.0.1  # Application host

# OpenTDB API Configuration (optional)
OPENTDB_API_TOKEN=your-token-here  # Only needed if using OpenTDB API with session tokens

# Security Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600  # Session lifetime in seconds

# Game Configuration
MIN_PLAYERS=1  # Minimum players required to start a game
MAX_PLAYERS=50  # Maximum players allowed in a game
DEFAULT_QUESTION_TIME=20  # Default time limit for questions in seconds
DEFAULT_QUESTION_POINTS=1000  # Default points per question
