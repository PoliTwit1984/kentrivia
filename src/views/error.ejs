<div class="container">
    <div class="row justify-content-center align-items-center min-vh-75">
        <div class="col-md-6 text-center">
            <% if (typeof title !== 'undefined' && title.includes('404')) { %>
                <div class="display-1 text-muted mb-4">
                    <i class="fas fa-ghost"></i>
                </div>
                <h1 class="display-4 mb-4">404 Not Found</h1>
                <p class="lead mb-4">
                    Oops! The page you're looking for doesn't exist.
                </p>
            <% } else { %>
                <div class="display-1 text-muted mb-4">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h1 class="display-4 mb-4">Oops!</h1>
                <p class="lead mb-4">
                    <%= typeof message !== 'undefined' ? message : 'Something went wrong!' %>
                </p>
            <% } %>

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a href="/" class="btn btn-primary btn-lg px-4 gap-3">
                    <i class="fas fa-home"></i> Go Home
                </a>
                <button onclick="history.back()" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="fas fa-arrow-left"></i> Go Back
                </button>
            </div>
        </div>
    </div>
</div>

<%- contentFor('extraCss') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
.min-vh-75 {
    min-height: 75vh;
}
</style>
